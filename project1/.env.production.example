# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!

# ===========================================
# DATABASE
# ===========================================
MONGO_INITDB_ROOT_USERNAME=your_secure_username
MONGO_INITDB_ROOT_PASSWORD=your_very_secure_password_here
MONGODB_URI=mongodb://your_secure_username:your_very_secure_password_here@mongodb:27017/noafarin?authSource=admin

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://redis:6379
# If using Redis with password:
# REDIS_URL=redis://:your_redis_password@redis:6379

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_rabbitmq_password
RABBITMQ_URL=amqp://your_rabbitmq_user:your_rabbitmq_password@rabbitmq:5672

# ===========================================
# JWT & SECURITY
# ===========================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_at_least_64_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://api.yourdomain.com

# ===========================================
# EMAIL (SMTP)
# ===========================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com

# ===========================================
# SMS (SMS.ir)
# ===========================================
SMS_IR_API_KEY=your_sms_ir_api_key
SMS_IR_LINE_NUMBER=your_line_number
SMS_IR_TEMPLATE_ID=your_template_id

# ===========================================
# FILE SERVICE
# ===========================================
FILE_SERVICE_BASE_URL=https://api.yourdomain.com

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=production
